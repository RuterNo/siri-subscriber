<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" shutdownHook="disable">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%style{%d{HH:mm}}{white} %highlight{%-5level}{DEBUG=blue} %style{[%t]}{magenta} %style{%c{1.1}}{cyan}: %m%n" />
    </Console>
  </Appenders>

  <Loggers>
    <Root level="INFO">
      <AppenderRef ref="Console"/>
    </Root>

    <Logger additivity="true" level="WARN" name="no.ruter.taas"/>

  </Loggers>
</Configuration>
